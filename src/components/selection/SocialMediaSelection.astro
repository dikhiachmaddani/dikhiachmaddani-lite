---
const { icon, link, label } = Astro.props;
---

<a href={link} role="link" target="_blank" rel="noopener noreferrer" title={label}>
    <div
        class="group relative h-7 w-7 flex justify-center items-center text-sm/6 text-[#0C3F33]"
        role="button"
        tabindex="0"
    >
        <span
            class="absolute inset-0 border border-dashed border-[#0C3F33]/60 bg-[#0C3F33]/10 group-hover:bg-[#0C3F33]/15"
            aria-hidden="true"
        ></span>
        <span class={icon} aria-hidden="true"></span>
        <svg
            width="5"
            height="5"
            viewBox="0 0 5 5"
            class="absolute top-[-2px] left-[-2px] fill-[#0C3F33]"
            aria-hidden="true"
        >
            <path d="M2 0h1v2h2v1h-2v2h-1v-2h-2v-1h2z"></path>
        </svg>
        <svg
            width="5"
            height="5"
            viewBox="0 0 5 5"
            class="absolute top-[-2px] right-[-2px] fill-[#0C3F33]"
            aria-hidden="true"
        >
            <path d="M2 0h1v2h2v1h-2v2h-1v-2h-2v-1h2z"></path>
        </svg>
        <svg
            width="5"
            height="5"
            viewBox="0 0 5 5"
            class="absolute bottom-[-2px] left-[-2px] fill-[#0C3F33]"
            aria-hidden="true"
        >
            <path d="M2 0h1v2h2v1h-2v2h-1v-2h-2v-1h2z"></path>
        </svg>
        <svg
            width="5"
            height="5"
            viewBox="0 0 5 5"
            class="absolute bottom-[-2px] right-[-2px] fill-[#0C3F33]"
            aria-hidden="true"
        >
            <path d="M2 0h1v2h2v1h-2v2h-1v-2h-2v-1h2z"></path>
        </svg>
    </div>
</a>
