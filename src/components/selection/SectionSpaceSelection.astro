---
const { breakpoint = 'sm' } = Astro.props;

const breakpointClass: Record<string, string> = {
    sm: 'h-4',
    md: 'h-8',
    lg: 'h-12',
};
---

<div
    class={`group relative mt-3 mb-2 text-sm/6 text-[#0C3F33] ${breakpointClass[breakpoint]}`}
>
    <span
        class="absolute inset-0 border border-dashed border-[#0C3F33]/60 bg-[#0C3F33]/10 group-hover:bg-[#0C3F33]/15"
    >
    </span>
    <svg
        width="5"
        height="5"
        viewBox="0 0 5 5"
        class="absolute top-[-2px] left-[-2px] fill-[#0C3F33]"
        aria-hidden="true"
    >
        <path d="M2 0h1v2h2v1h-2v2h-1v-2h-2v-1h2z"></path>
    </svg>
    <svg
        width="5"
        height="5"
        viewBox="0 0 5 5"
        class="absolute top-[-2px] right-[-2px] fill-[#0C3F33]"
        aria-hidden="true"
    >
        <path d="M2 0h1v2h2v1h-2v2h-1v-2h-2v-1h2z"></path>
    </svg>
    <svg
        width="5"
        height="5"
        viewBox="0 0 5 5"
        class="absolute bottom-[-2px] left-[-2px] fill-[#0C3F33]"
        aria-hidden="true"
    >
        <path d="M2 0h1v2h2v1h-2v2h-1v-2h-2v-1h2z"></path>
    </svg>
    <svg
        width="5"
        height="5"
        viewBox="0 0 5 5"
        class="absolute bottom-[-2px] right-[-2px] fill-[#0C3F33]"
        aria-hidden="true"
    >
        <path d="M2 0h1v2h2v1h-2v2h-1v-2h-2v-1h2z"></path>
    </svg>
</div>
