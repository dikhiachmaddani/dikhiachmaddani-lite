---
import HeadingSelection from '@/components/selection/HeadingSelection.astro';
import SocialMediaSelection from '@/components/selection/SocialMediaSelection.astro';
import type { SocialMedia } from '@/domain/social-media';
import sites from '@/common/data/sites';
import { Image } from 'astro:assets';

const socialMedia: SocialMedia[] = [
    {
        link: `mailto:${sites.email}`,
        icon: `icon-[iconoir--mail-in]`,
    },
    {
        link: `${sites.github}`,
        icon: `icon-[line-md--github]`,
    },
    {
        link: `${sites.linkedin}`,
